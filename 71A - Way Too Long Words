#include<stdio.h>
#include<string.h>
int main()
{
    int t,n;
    char str[105];
    scanf("%d", &t);
    while(t--)
    {
       scanf("%s", &str);
       n=strlen(str);
       if(n<=10) printf("%s\n", str);
       else
       {
        printf("%c%d%c\n", str[0],n-2,str[n-1]);
       }
    }
    return 0;
}
