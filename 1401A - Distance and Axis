#include<bits/stdc++.h>

using namespace std;
int main()
{
    int t;
    cin >> t;
    while(t--)
    {
        long long int n,k;
        cin >> n >> k;
        if(n==k) cout << 0 << endl;
        else if(k==0 && n%2==0) cout << 0 <<endl;
        else if(n==0) cout << k <<endl;
        else cout << abs(n-k) << endl;
    }
    return 0;
}
