#include<bits/stdc++.h>
using namespace std;

int main()
{
int t;
cin >> t;
while(t--)
{
    int n, cnt=0;
    string s;
    cin >> n;
    cin >> s;
    string s1=s;
    sort(s1.begin(),s1.end());
    for(int i=0; i<n; i++)
    {
        if(s[i]==s1[i])
            cnt++;
    }
    cout << n-cnt << endl;
}

return 0;
}
